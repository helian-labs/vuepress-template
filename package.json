{
  "name": "vuepress-template",
  "description": "基于 VuePress 的通用文档模板",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vuepress-template"
  },
  "scripts": {
    "docs:build": "vuepress build docs",
    "docs:clean-dev": "vuepress dev docs --clean-cache",
    "docs:dev": "vuepress dev docs",
    "docs:update-package": "pnpm dlx vp-update",
    "docs:deploy": "bash deploy.sh",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,vue,html,md}\" --ignore-path .gitignore",
    "new:page": "node scripts/new-page.js",
    "new:component": "node scripts/create-component.js",
    "validate:content": "node scripts/validate-content.js",
    "analyze:build": "node scripts/analyze-build.js",
    "validate": "pnpm validate:content",
    "analyze": "pnpm analyze:build"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "@vuepress/bundler-vite": "2.0.0-rc.21",
    "@vuepress/client": "2.0.0-rc.21",
    "@vuepress/plugin-docsearch": "2.0.0-rc.21",
    "@vuepress/plugin-medium-zoom": "2.0.0-rc.21",
    "@vuepress/plugin-pwa": "2.0.0-rc.21",
    "@vuepress/plugin-register-components": "2.0.0-rc.21",
    "@vuepress/plugin-search": "2.0.0-rc.21",
    "@vuepress/theme-default": "2.0.0-rc.21",
    "@vuepress/utils": "2.0.0-rc.21",
    "chalk": "^4.1.2",
    "eslint": "^8",
    "eslint-config-prettier": "^9",
    "eslint-define-config": "^2",
    "eslint-plugin-vue": "^9",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-footnote": "^3.0.3",
    "prettier": "^3",
    "sass": "^1.71.1",
    "typescript": "^5",
    "vue": "^3.5.13",
    "vue-eslint-parser": "^9",
    "vuepress": "2.0.0-rc.21"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
