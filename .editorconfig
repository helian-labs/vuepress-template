# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# YAML files typically use 2 spaces for indentation
[*.{yaml,yml}]
indent_size = 2

# Optional: Add max_line_length if your project enforces it
# max_line_length = 80

# Ensure lock files maintain their specific formatting if needed
# [*.lock]
# trim_trailing_whitespace = false
# insert_final_newline = false

[*.md]
trim_trailing_whitespace = false